@model IEnumerable<Swift.Models.UserAccount>
<main> 
    <h2 class="text-center">Profile</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover" >
            <tr class="bg-info text-light h5">
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            
            @foreach (var item in Model) {
                <tr>
                    <td class="fw-bold w-25">@item.UserId</td>
                    <td class="fw-bold w-100">@item.Username</td>
                    <td class=" d-flex flex-nowrap text-nowrap">
                        <button class="btn btn-success me-2"> <i class="fas fa-edit"></i> EDIT </button>
                        <button class="js-delete-user btn btn-danger" data-user_id="@item.UserId" data-user_name="@item.Username"> <i class="far fa-trash-alt"></i> DELETE </button>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="text-end"> 
        <a class="btn btn-primary" asp-action="ExportToExcel">Export</a>
    </div>
    <br>
</main>